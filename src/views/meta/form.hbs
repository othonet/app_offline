<div class="mb-6">
    <a href="/admin/metas" class="text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 mb-4 inline-block">
        ← Voltar para lista
    </a>
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mt-2">{{title}}</h1>
</div>

{{#if error}}
<div class="mb-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
    <p class="text-red-800 dark:text-red-200">{{error}}</p>
</div>
{{/if}}

<div class="card max-w-4xl">
    <form action="{{#if meta}}/admin/metas/{{meta.id}}{{else}}/admin/metas{{/if}}" method="POST">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Coluna Esquerda -->
            <div class="space-y-4">
                <div>
                    <label for="nome" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Nome <span class="text-red-500 dark:text-red-400">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="nome" 
                        name="nome" 
                        required
                        value="{{#if meta}}{{meta.nome}}{{/if}}"
                        class="input-field"
                        placeholder="Digite o nome da meta"
                    >
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="valor" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Valor
                        </label>
                        <input 
                            type="number" 
                            id="valor" 
                            name="valor" 
                            step="0.01"
                            value="{{#if meta}}{{meta.valor}}{{/if}}"
                            class="input-field"
                            placeholder="0.00"
                        >
                    </div>
                    
                    <div>
                        <label for="unidade" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Unidade
                        </label>
                        <input 
                            type="text" 
                            id="unidade" 
                            name="unidade" 
                            value="{{#if meta}}{{meta.unidade}}{{/if}}"
                            class="input-field"
                            placeholder="Ex: kg, litros"
                        >
                    </div>
                </div>
                
                <div>
                    <label class="flex items-center">
                        <input 
                            type="checkbox" 
                            name="ativo" 
                            {{#if meta}}{{#if meta.ativo}}checked{{/if}}{{else}}checked{{/if}}
                            class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
                        >
                        <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Ativo</span>
                    </label>
                </div>
            </div>
            
            <!-- Coluna Direita -->
            <div class="space-y-4">
                <div>
                    <label for="descricao" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Descrição
                    </label>
                    <textarea 
                        id="descricao" 
                        name="descricao" 
                        rows="7"
                        class="input-field"
                        placeholder="Digite a descrição da meta"
                    >{{#if meta}}{{meta.descricao}}{{/if}}</textarea>
                </div>
            </div>
        </div>
        
        <div class="mt-6 flex justify-end space-x-3">
            <a href="/admin/metas" class="btn-secondary">
                Cancelar
            </a>
            <button type="submit" class="btn-primary">
                {{#if meta}}Atualizar{{else}}Criar{{/if}} Meta
            </button>
        </div>
    </form>
</div>

