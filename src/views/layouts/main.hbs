                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <div class="p-6">
                {{{body}}}
            </div>
        </main>
    </div>
    
    <script>
        // Timer de sessão (15 minutos)
        let sessionTime = 15 * 60; // 15 minutos em segundos
        
        function updateTimer() {
            const minutes = Math.floor(sessionTime / 60);
            const seconds = sessionTime % 60;
            const timerEl = document.getElementById('session-timer');
            if (timerEl) {
                timerEl.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            }
            
            if (sessionTime <= 0) {
                // Verifica se está em rota admin
                const isAdminRoute = window.location.pathname.startsWith('/admin');
                const loginUrl = isAdminRoute ? '/admin/auth/login?expired=true' : '/auth/login?expired=true';
                window.location.href = loginUrl;
                return;
            }
            
            sessionTime--;
        }
        
        // Reset timer on activity
        let activityTimeout;
        ['mousedown', 'mousemove', 'keypress', 'scroll', 'touchstart'].forEach(event => {
            document.addEventListener(event, () => {
                clearTimeout(activityTimeout);
                activityTimeout = setTimeout(() => {
                    sessionTime = 15 * 60; // Reset to 15 minutes
                }, 1000);
            });
        });
        
        // Update timer every second
        setInterval(updateTimer, 1000);
        updateTimer();
    </script>
</body>
