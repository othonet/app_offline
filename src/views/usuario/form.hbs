<div class="mb-6">
    <a href="/admin/usuarios" class="text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 mb-4 inline-block">
        ← Voltar para lista
    </a>
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mt-2">{{title}}</h1>
</div>

{{#if error}}
<div class="mb-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
    <p class="text-red-800 dark:text-red-200">{{error}}</p>
</div>
{{/if}}

<div class="card max-w-4xl">
    <form action="{{#if usuario}}/admin/usuarios/{{usuario.id}}{{else}}/admin/usuarios{{/if}}" method="POST">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Coluna Esquerda -->
            <div class="space-y-4">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Nome Completo <span class="text-red-500 dark:text-red-400">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required
                        value="{{#if usuario}}{{usuario.name}}{{/if}}"
                        class="input-field"
                        placeholder="Digite o nome completo"
                    >
                </div>
                
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Nome de Usuário <span class="text-red-500 dark:text-red-400">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        required
                        value="{{#if usuario}}{{usuario.username}}{{/if}}"
                        class="input-field"
                        placeholder="Digite o nome de usuário"
                    >
                </div>
                
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Email
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        value="{{#if usuario}}{{usuario.email}}{{/if}}"
                        class="input-field"
                        placeholder="Digite o email (opcional)"
                    >
                </div>
            </div>
            
            <!-- Coluna Direita -->
            <div class="space-y-4">
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Senha <span class="text-red-500 dark:text-red-400">*</span>
                        {{#if usuario}}<span class="text-xs text-gray-500 dark:text-gray-400 block mt-1">(deixe em branco para manter a senha atual)</span>{{/if}}
                    </label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        {{#unless usuario}}required{{/unless}}
                        class="input-field"
                        placeholder="Digite a senha"
                        minlength="6"
                    >
                </div>
                
                <div>
                    <label for="role" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Nível de Acesso <span class="text-red-500 dark:text-red-400">*</span>
                    </label>
                    <select 
                        id="role" 
                        name="role" 
                        required
                        class="input-field"
                    >
                        <option value="">Selecione o nível de acesso</option>
                        <option value="ADMIN" {{#if usuario}}{{#if (eq usuario.role 'ADMIN')}}selected{{/if}}{{/if}}>Administrador</option>
                        <option value="DIRETOR" {{#if usuario}}{{#if (eq usuario.role 'DIRETOR')}}selected{{/if}}{{/if}}>Diretor</option>
                        <option value="ANALISTA" {{#if usuario}}{{#if (eq usuario.role 'ANALISTA')}}selected{{/if}}{{/if}}>Analista</option>
                        <option value="INSPETOR" {{#if usuario}}{{#if (eq usuario.role 'INSPETOR')}}selected{{/if}}{{/if}}>Inspetor</option>
                    </select>
                </div>
                
                <div>
                    <label class="flex items-center">
                        <input 
                            type="checkbox" 
                            name="active" 
                            {{#if usuario}}{{#if usuario.active}}checked{{/if}}{{else}}checked{{/if}}
                            class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
                        >
                        <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Usuário Ativo</span>
                    </label>
                </div>
            </div>
        </div>
        
        <div class="mt-6 flex justify-end space-x-3">
            <a href="/admin/usuarios" class="btn-secondary">
                Cancelar
            </a>
            <button type="submit" class="btn-primary">
                {{#if usuario}}Atualizar{{else}}Criar{{/if}} Usuário
            </button>
        </div>
    </form>
</div>

