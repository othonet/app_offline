<div class="mb-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">Gerenciamento de Usuários</h1>
    <a href="/admin/usuarios/novo" class="btn-primary">
        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Novo Usuário
    </a>
</div>

{{#if error}}
<div class="mb-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
    <p class="text-red-800 dark:text-red-200">{{error}}</p>
</div>
{{/if}}

{{#if success}}
<div class="mb-4 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
    <p class="text-green-800 dark:text-green-200">{{success}}</p>
</div>
{{/if}}

{{> table-controls}}

<div class="card">
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        {{> sortable-header field="name" label="Nome" currentSort=sort currentOrder=order baseUrl=baseUrl search=search pagination=pagination}}
                    </th>
                    <th>
                        {{> sortable-header field="username" label="Usuário" currentSort=sort currentOrder=order baseUrl=baseUrl search=search pagination=pagination}}
                    </th>
                    <th>
                        {{> sortable-header field="email" label="Email" currentSort=sort currentOrder=order baseUrl=baseUrl search=search pagination=pagination}}
                    </th>
                    <th>
                        {{> sortable-header field="role" label="Nível de Acesso" currentSort=sort currentOrder=order baseUrl=baseUrl search=search pagination=pagination}}
                    </th>
                    <th>
                        {{> sortable-header field="active" label="Status" currentSort=sort currentOrder=order baseUrl=baseUrl search=search pagination=pagination}}
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#if usuarios}}
                    {{#each usuarios}}
                    <tr>
                        <td class="font-medium">{{name}}</td>
                        <td>{{username}}</td>
                        <td>{{#if email}}{{email}}{{else}}<span class="text-gray-400 dark:text-gray-500">-</span>{{/if}}</td>
                        <td>
                            {{#if (eq role 'ADMIN')}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300">Administrador</span>
                            {{else if (eq role 'DIRETOR')}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">Diretor</span>
                            {{else if (eq role 'ANALISTA')}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">Analista</span>
                            {{else}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">Inspetor</span>
                            {{/if}}
                        </td>
                        <td>
                            {{#if active}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">Ativo</span>
                            {{else}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">Inativo</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="flex space-x-2">
                                <a href="/admin/usuarios/editar/{{id}}" class="text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </a>
                                {{#if (eq ../user.id id)}}
                                    <span class="text-gray-400 dark:text-gray-600 cursor-not-allowed" title="Você não pode deletar seu próprio usuário">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </span>
                                {{else}}
                                    <form action="/admin/usuarios/deletar/{{id}}" method="POST" class="inline" onsubmit="return confirmDelete(this, 'Tem certeza que deseja deletar este usuário?');">
                                        <button type="submit" class="text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </form>
                                {{/if}}
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="6" class="text-center py-8 text-gray-500 dark:text-gray-400">
                            Nenhum usuário cadastrado. <a href="/admin/usuarios/novo" class="text-primary-600 dark:text-primary-400 hover:underline">Criar primeiro usuário</a>
                        </td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>

