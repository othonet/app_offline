<form action="{{#if isAdminLogin}}/admin/auth/login{{else}}/auth/login{{/if}}" method="POST" class="space-y-6">
    <div>
        <label for="username" class="block text-sm font-medium text-white mb-2">
            Usuário
        </label>
        <input 
            type="text" 
            id="username" 
            name="username" 
            required
            autofocus
            class="w-full px-4 py-3 bg-gray-800 dark:bg-gray-800 border border-gray-700 dark:border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all placeholder-gray-500"
            placeholder="Digite seu usuário"
        >
    </div>
    
    <div>
        <label for="password" class="block text-sm font-medium text-white mb-2">
            Senha
        </label>
        <input 
            type="password" 
            id="password" 
            name="password" 
            required
            class="w-full px-4 py-3 bg-gray-800 dark:bg-gray-800 border border-gray-700 dark:border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition-all placeholder-gray-500"
            placeholder="••••••••"
        >
    </div>
    
    <button type="submit" class="w-full py-3 px-4 bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-[1.02]">
        Entrar
    </button>
</form>

