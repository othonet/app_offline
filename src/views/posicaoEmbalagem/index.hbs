<div class="mb-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">Cadastro de Posições de Embalagem</h1>
    <a href="/admin/posicoes-embalagem/novo" class="btn-primary">
        <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Nova Posição
    </a>
</div>

{{#if error}}
<div class="mb-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
    <p class="text-red-800 dark:text-red-200">{{error}}</p>
</div>
{{/if}}

{{#if success}}
<div class="mb-4 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
    <p class="text-green-800 dark:text-green-200">{{success}}</p>
</div>
{{/if}}

{{> table-controls}}

<div class="card">
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        {{> sortable-header field="nome" label="Nome" currentSort=sort currentOrder=order baseUrl=baseUrl search=search pagination=pagination}}
                    </th>
                    <th>Descrição</th>
                    <th>
                        {{> sortable-header field="ativo" label="Status" currentSort=sort currentOrder=order baseUrl=baseUrl search=search pagination=pagination}}
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#if posicoes}}
                    {{#each posicoes}}
                    <tr>
                        <td class="font-medium">{{nome}}</td>
                        <td>{{descricao}}</td>
                        <td>
                            {{#if ativo}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">Ativo</span>
                            {{else}}
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">Inativo</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="flex space-x-2">
                                <a href="/admin/posicoes-embalagem/editar/{{id}}" class="text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </a>
                                <form action="/admin/posicoes-embalagem/deletar/{{id}}" method="POST" class="inline" onsubmit="return confirmDelete(this, 'Tem certeza que deseja deletar esta posição?');">
                                    <button type="submit" class="text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="4" class="text-center py-8 text-gray-500 dark:text-gray-400">
                            Nenhuma posição cadastrada. <a href="/admin/posicoes-embalagem/novo" class="text-primary-600 dark:text-primary-400 hover:underline">Criar primeira posição</a>
                        </td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>

