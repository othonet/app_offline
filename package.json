{
  "name": "app-offline",
  "version": "1.0.0",
  "description": "Sistema offline de produção com verificação de licença online",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"tailwindcss -i ./src/public/css/input.css -o ./src/public/css/output.css --watch\"",
    "build-css": "tailwindcss -i ./src/public/css/input.css -o ./src/public/css/output.css --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "node src/scripts/seed.js",
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed && npm run build-css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.0"
  }
}
